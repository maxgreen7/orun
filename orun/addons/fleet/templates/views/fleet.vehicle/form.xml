<form>
  <field name="company"/>
  <field name="model"/>
  <field name="model_year"/>
  <field name="manufacture_year"/>
  <field name="license_plate"/>
  <field name="description"/>
  <field name="active"/>
  <tabset>
    <tab>
      <tab-heading>{{ _('General') }}</tab-heading>

      <field name="category"/>
      <field name="purchase_value"/>
      <field name="acquisition_date"/>

      <field name="driver"/>
      <field name="supplier"/>
      <field name="vehicle_state"/>
      <field name="odometer"/>
      <field name="odometer_unit"/>

      <field name="weight_capacity"/>
      <field name="weight"/>
      <field name="weight_unit"/>

      <field name="cargo"/>
      <field name="ownership"/>
      <field name="rented"/>
      <field name="invoice_ref"/>
      <field name="autonomy"/>
      <field name="chassis"/>
    </tab>
    <tab>
      <tab-heading>{{ _('Characteristics') }}</tab-heading>
      <field name="color"/>
      <field name="co2"/>
      <field name="transmission"/>

      <field name="doors"/>
      <field name="seats"/>

      <field name="hp"/>
      <field name="lifespan_years"/>
      <field name="lifespan_hours"/>
    </tab>
    <tab>
      <tab-heading>{{ _('Fuel') }}</tab-heading>
      <field name="fuel" nolabel="true" />
    </tab>
    <tab>
      <tab-heading>{{ _('Vehicle Costs') }}</tab-heading>
      <field name="vehicle_costs" nolabel="true"/>
    </tab>
    <tab>
      <tab-heading>{{ _('Notes') }}</tab-heading>
      <field name="notes"/>
    </tab>
  </tabset>
</form>