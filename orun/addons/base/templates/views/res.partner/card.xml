<card>
  <field name="display_name"/>
  <field name="color"/>
  <field name="title"/>
  <field name="email"/>

  <div>
    <div class="card-image">
      <img src=""/>
    </div>
    <div class="card-details">
      <strong>
        <field name="display_name"/>
      </strong>
      <ul>
        <li ng-show="record.email"><field name="email"/></li>
      </ul>
    </div>
  </div>
</card>